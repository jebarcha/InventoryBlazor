@page "{id:int?}"
@model RPInventory.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Do you want to delete user " + Model.User.Username + "?";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Lastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.CelPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.CelPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Profile)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Profile.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <partial name="Actions/_Delete" />
    </form>
</div>
