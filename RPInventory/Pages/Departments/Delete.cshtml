@page "{id:int?}"
@model RPInventory.Pages.Departments.DeleteModel

@{
    ViewData["Title"] = "Do you want to delete departamento with name" + Model.Department.Name + "?";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DateCreation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DateCreation)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Department.Id" />
        <partial name="Actions/_Delete" />
    </form>
</div>
