@page "{id:int?}"
@model RPInventory.Pages.Departments.DetailsModel

@{
    ViewData["Title"] = "Detalles del departamento";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DateCreation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DateCreation)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col">
        <partial name="Actions/_Details" model="@Model.Department.Id" />
    </div>
</div>